<Page x:Class="CenterSwimming.Pages.ClientRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CenterSwimming.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientRecordPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Title}"></TextBlock>
            <TextBlock Text="{Binding CostTime}"></TextBlock>
            <ComboBox Name="ClientCb" Width="250"></ComboBox>
            <DatePicker Width="250" Margin="5" Name="DateDp" Height="35"></DatePicker>
            <StackPanel Orientation="Horizontal" Width="250">
                <TextBlock>Время</TextBlock>
                <ScrollViewer Margin="2" HorizontalAlignment="Center" HorizontalScrollBarVisibility="Disabled" Width="140" Height="80">
                    <WrapPanel  x:Name="TimeWp" ></WrapPanel>
                </ScrollViewer>
                <TextBox Width="55" Name="EndTimeTb"  IsEnabled="False" ></TextBox>
            </StackPanel>
            <Button x:Name="EntryBtn" Click="EntryBtn_Click">Записаться</Button>
        </StackPanel>
    </Grid>
</Page>
